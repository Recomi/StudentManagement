<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="editActivity" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@color/colorToolbar</item>
    </style>

    <style name="RippleWhite">
        <item name="android:colorControlHighlight">#A4BBBBBB</item>
        <item name="android:radius">20dp</item>
    </style>

</resources>
